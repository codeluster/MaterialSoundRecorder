<resources>
    <string name="app_name">SoundRecorder</string>

    <!-- Action Bar Title text -->
    <string name="action_bar_title">@string/app_name</string>

    <!-- An array containing the title of fragments shown in pager -->
    <string-array name="fragment_titles">
        <!-- Title of fragment to create new recording -->
        <item>Record</item>
        <!-- Title of fragment allowing browsing and playback of saved recordings -->
        <item>Saved</item>
    </string-array>

    <!-- Default name of a new recording -->
    <string name="default_file_name" translatable="false">My Recording</string>

    <!-- Default file extension of a new recording -->
    <string name="default_file_extension" translatable="false">.mp4</string>

    <!-- Default file extension of a new recording -->
    <string name="default_file_directory" translatable="false">@string/app_name</string>

    <!-- Toast message to inform user of recording started -->
    <string name="prompt_recording_started">Recording Started</string>

    <!-- Title of prefernce to enable recording in high quality -->
    <string name="pref_high_quality_title">Enable High Quality Recording</string>

    <!-- Summary of prefernce to enable recording in high quality -->
    <string name="pref_high_quality_summary">Record in CD Quality</string>

</resources>
